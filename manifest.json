{
  "manifest_version": 3,
  "name": "Live Meeting Cost Tracker",
  "version": "1.0.0",
  "description": "Tracks the accumulating cost of meetings in real-time.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "48": "images/icon_48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png"
  },
  "default_locale": "en"
}
